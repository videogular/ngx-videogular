{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "importHelpers": true,
    "paths": {
      "@videogular/ngx-videogular": ["dist/libs/ngx-videogular"],
      "@videogular/ngx-videogular/*": ["dist/libs/ngx-videogular/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
