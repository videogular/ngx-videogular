{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": false,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@videogular/ngx-videogular": ["libs/ngx-videogular/public-api"],
      "@videogular/ngx-videogular/*": ["libs/ngx-videogular/*/src/index"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
